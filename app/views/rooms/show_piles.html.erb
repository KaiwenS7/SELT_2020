<h2>All Piles</h2>
<table class="table table-striped col-md-12">
  <tbody>
  <% @piles.each do |pile| %>
    <tr>
      <td>
        <%= button_tag "#{pile.serializable_hash}", type: "button", onclick: "show_cards(#{pile.id})"%>
      </td>
      <td id=<%="#{pile.id}"%> style="display:none;">
        <% Card.where(pile_id: pile.id).each do |card| %>
          <%= "#{card.serializable_hash}" %>
        <%end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
